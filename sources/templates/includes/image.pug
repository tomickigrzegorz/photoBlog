mixin image(path, src, className, alt)
    -
        var img576 = path + "576/" + src
        var img768 = path + "768/" + src
        var img992 = path + "992/" + src
        var img1200 = path + "1200/" + src

    picture
        source(data-srcset=img1200.replace('jpg', 'webp') media="(min-width: 993px)" type="image/webp")
        source(data-srcset=img1200 media="(min-width: 992px)")

        source(data-srcset=img992.replace('jpg', 'webp') media="(min-width: 769px) and (max-width: 992px)" type="image/webp")
        source(data-srcset=img992 media="(min-width: 769px) and (max-width: 992px)")

        source(data-srcset=img768.replace('jpg', 'webp') media="(min-width: 577px) and (max-width: 768px)" type="image/webp")
        source(data-srcset=img768 media="(min-width: 577px) and (max-width: 768px)")

        source(data-srcset=img576.replace('jpg', 'webp') media="(max-width: 576px)" type="image/webp")
        source(data-srcset=img576 media="(max-width: 576px)")

        img(data-src=img1200 alt=alt)
        noscript
            img(src=img1200 alt=alt)
